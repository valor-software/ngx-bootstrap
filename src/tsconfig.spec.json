{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "jasmine",
      "webpack"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "../scripts/typings.d.ts",
    "../scripts/test-demo.ts",
    "../scripts/test-source.ts",
    "../demo/src/**/*.ts",
    "../demo/src/**/*.d.ts",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "../demo/src/typings.d.ts"
  ]
}
