{
  "name": "focus-trap",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "src/focus-trap",
  "prefix": "ngx-bootstrap-base",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/ngx-bootstrap/focus-trap"
      ],
      "options": {
        "tsConfig": "src/focus-trap/tsconfig.lib.json",
        "project": "src/focus-trap/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "src/focus-trap/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "src/focus-trap/**/*.ts",
          "src/focus-trap/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/src/focus-trap"
      ],
      "options": {
        "jestConfig": "src/focus-trap/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
