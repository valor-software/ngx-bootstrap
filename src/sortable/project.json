{
  "name": "sortable",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "src/sortable",
  "prefix": "ngx-bootstrap-base",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/ngx-bootstrap/sortable"
      ],
      "options": {
        "tsConfig": "src/sortable/tsconfig.lib.json",
        "project": "src/sortable/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "src/sortable/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "src/sortable/**/*.ts",
          "src/sortable/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/src/sortable"
      ],
      "options": {
        "jestConfig": "src/sortable/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
